{
  "name": "@embed-stuff/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./components/*": {
      "types": "./dist/src/components/*.d.ts",
      "default": [
        "./src/components/*.ts",
        "./src/components/*.tsx"
      ]
    },
    "./hooks/*": {
      "types": "./dist/src/hooks/*.d.ts",
      "default": [
        "./src/hooks/*.ts",
        "./src/hooks/*.tsx"
      ]
    },
    "./lib/*": {
      "types": "./dist/src/lib/*.d.ts",
      "default": [
        "./src/lib/*.ts",
        "./src/lib/*.tsx"
      ]
    },
    "./ui/*": {
      "types": "./dist/src/ui/*.d.ts",
      "default": [
        "./src/ui/*.ts",
        "./src/ui/*.tsx"
      ]
    },
    "./utils/*": {
      "types": "./dist/src/utils/*.d.ts",
      "default": [
        "./src/utils/*.ts",
        "./src/utils/*.tsx"
      ]
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "ui-add": "pnpm dlx shadcn@latest add && prettier src --write --list-different"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.4",
    "class-variance-authority": "^0.7.0",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@embed-stuff/eslint-config": "workspace:*",
    "@embed-stuff/prettier-config": "workspace:*",
    "@embed-stuff/tsconfig": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@embed-stuff/prettier-config"
}
